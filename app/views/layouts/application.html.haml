%html
  %head
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1'}
    %title= content_for?(:title) ? yield(:title) : 'BM Audio'
    = stylesheet_link_tag :application, media: 'all'
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield(:head)
  %body#main{role: 'main'}
    .container
      .content
        .row
          .col-md-12
            = yield
    %footer.footer
      .container

